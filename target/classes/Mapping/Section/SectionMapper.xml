    <select id="findFirstSection" resultMap="sectionResult">
        select section_id, section_name
        from section_info
        where parent_id = 0
    </select>

    <select id="queryAllSections" parameterType="int" resultMap="sectionResult">
        select section_id, section_name
        from section_info
        where parent_id = #{section_id}
    </select>

